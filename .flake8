[flake8]
# Maximum line length
max-line-length = 88

# Exclude directories
exclude = 
    .venv,
    __pycache__,
    .git,
    venv,
    env,
    node_modules,
    .tox,
    dist,
    build

# Ignore specific error codes (optional)
ignore = 
    # Line too long (handled by max-line-length)
    E501,
    # Whitespace before ':' (conflicts with black formatter)
    E203

# Maximum complexity
max-complexity = 10

# Select specific error codes for critical checks
select = E,W,F,C

# Per-file ignores (if needed)
per-file-ignores =
    __init__.py:F401
